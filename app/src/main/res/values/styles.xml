<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/text</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CityName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen100</item>
        <item name="android:background">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding16</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding0</item>
        <item name="android:layout_marginStart">@dimen/padding16</item>
        <item name="android:layout_marginLeft">@dimen/padding16</item>
        <item name="android:layout_marginTop">@dimen/padding8</item>
        <item name="android:layout_marginEnd">@dimen/padding16</item>
        <item name="android:layout_marginRight">@dimen/padding16</item>
        <item name="android:layout_marginBottom">@dimen/padding8</item>
    </style>

    <style name="placePhoto">
        <item name="android:layout_width">@dimen/dimen150</item>
        <item name="android:layout_height">@dimen/dimen50</item>
        <item name="android:layout_marginStart">@dimen/padding8</item>
        <item name="android:layout_marginLeft">@dimen/padding8</item>
        <item name="android:layout_marginTop">@dimen/padding8</item>
        <item name="android:layout_marginEnd">@dimen/padding30</item>
        <item name="android:layout_marginRight">@dimen/padding30</item>
        <item name="android:layout_marginBottom">@dimen/padding8</item>
        <item name="android:contentDescription">@string/locImage</item>
    </style>

    <style name="placeName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/padding3</item>
        <item name="android:layout_toEndOf">@id/photo</item>
        <item name="android:layout_toRightOf">@id/photo</item>
        <item name="android:paddingTop">@dimen/padding8</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/medText</item>
    </style>

    <style name="placeAddress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/name</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/padding3</item>
        <item name="android:layout_toEndOf">@id/photo</item>
        <item name="android:layout_toRightOf">@id/photo</item>
        <item name="android:textSize">@dimen/smText</item>
    </style>

    <style name="placePhone">
        <item name="android:layout_width">@dimen/padding30</item>
        <item name="android:layout_height">@dimen/padding30</item>
        <item name="android:layout_below">@+id/address</item>
        <item name="android:background">@drawable/icon_phone</item>
        <item name="android:layout_toEndOf">@id/photo</item>
        <item name="android:layout_toRightOf">@id/photo</item>
        <item name="android:layout_margin">@dimen/padding3</item>
    </style>

    <style name="placeWebsite">
        <item name="android:layout_width">@dimen/padding30</item>
        <item name="android:layout_height">@dimen/padding30</item>
        <item name="android:layout_below">@+id/address</item>
        <item name="android:background">@drawable/icon_website</item>
        <item name="android:layout_toEndOf">@id/phone</item>
        <item name="android:layout_toRightOf">@id/phone</item>
        <item name="android:layout_margin">@dimen/padding3</item>
    </style>

    <style name="placeAddressURI">
        <item name="android:layout_width">@dimen/padding30</item>
        <item name="android:layout_height">@dimen/padding30</item>
        <item name="android:layout_below">@+id/address</item>
        <item name="android:background">@drawable/icon_map</item>
        <item name="android:layout_toEndOf">@id/website</item>
        <item name="android:layout_toRightOf">@id/website</item>
        <item name="android:layout_margin">@dimen/padding3</item>
    </style>

    <style name="placeCal">
        <item name="android:layout_width">@dimen/padding30</item>
        <item name="android:layout_height">@dimen/padding30</item>
        <item name="android:layout_below">@+id/address</item>
        <item name="android:background">@drawable/icon_ical</item>
        <item name="android:layout_toEndOf">@id/addressURI</item>
        <item name="android:layout_toRightOf">@id/addressURI</item>
        <item name="android:layout_margin">@dimen/padding3</item>
    </style>

</resources>
